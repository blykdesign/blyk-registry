{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./registry/base/components/*"],
      "@/hooks/*": ["./registry/base/components/hooks/*"],
      "@/lib/*": ["./lib/*"],
      "@/*": ["./*"]
    },
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": [
    "scripts/**/*.ts",
    "registry/**/*.ts",
    "registry/**/*.tsx",
    "stories/**/*.ts",
    "stories/**/*.tsx",
    "lib/**/*.ts",
    ".storybook/**/*.ts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "storybook-static"
  ]
}

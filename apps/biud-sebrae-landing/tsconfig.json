{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/components/ui/*": ["../../registry/base/components/ui/*"],
      "@/lib/*": ["../../lib/*"],
      "@/hooks/*": ["../../registry/base/components/hooks/*"],
      "@/*": ["../../registry/base/*"]
    }
  },
  "include": ["src"]
}
